@model innocv_crud_api.Models.User

@{
    ViewBag.Title = "Add User Page";
}
<div class="jumbotron">
    <h1>Add user</h1>
</div>
<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h5>Please, add the details of your new user</h5>

            <div class="form-group">
                <div class="control-label col-xs-12 col-sm-3"><strong>Name</strong></div>
                <div class="col-xs-12 col-sm-9">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-xs-12 col-sm-3"><strong>Birthdate</strong></div>
                <div class="col-xs-12 col-sm-9">
                    @Html.EditorFor(model => model.Birthdate, "{0:dd/MM/yyyy}", new { htmlAttributes = new { @class = "form-control datepicker", Value = DateTime.Now.ToShortDateString(), @type = "datetime" } })
                    @Html.ValidationMessageFor(m => m.Birthdate, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-primary">
            </div>
        </div>
        }
</div>

<div>
    @Html.ActionLink("< Back to Home", "Index",
          new { controller = "Home" },
          new { @class = "link link-back" })
</div>